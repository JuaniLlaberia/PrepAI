generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Experience {
  intership
  junior
  ssr
  senior
  lead
  executive
}

model User {
  id        String      @id @default(cuid())
  name      String
  email     String      @unique
  Interview Interview[]
  Exam      Exam[]
}

model Interview {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  jobRole        String
  jobDescription String
  jobExperience  Experience
  taken          Boolean
  pinned         Boolean    @default(false)
  createdAt      DateTime   @default(now())

  Question         Question[]
  InterviewAttempt InterviewAttempt[]
  Answer           Answer[]

  @@index([userId])
}

model Question {
  id       String @id @default(cuid())
  question String
  hint     String

  interviewId String
  interview   Interview @relation(fields: [interviewId], references: [id])

  Answer Answer[]

  @@index([interviewId])
}

model InterviewAttempt {
  id             String   @id @default(cuid())
  speechAnalysis String?
  createdAt      DateTime @default(now())

  interviewId String
  interview   Interview @relation(fields: [interviewId], references: [id])

  Answer Answer[]

  @@index([interviewId])
}

model Answer {
  id           String @id @default(cuid())
  userResponse String
  feedback     String
  score        Int

  questionId         String
  question           Question         @relation(fields: [questionId], references: [id])
  interviewAttemptId String
  interviewAttempt   InterviewAttempt @relation(fields: [interviewAttemptId], references: [id])
  interviewId        String
  interview          Interview        @relation(fields: [interviewId], references: [id])

  @@index([questionId])
  @@index([interviewAttemptId])
}

enum Difficulty {
  easy
  medium
  hard
}

model Exam {
  id         String     @id @default(cuid())
  subject    String
  difficulty Difficulty
  passed     Boolean
  taken      Boolean
  pinned     Boolean
  createdAt  DateTime   @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}
